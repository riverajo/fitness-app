{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "actions/upload-artifact"
      ],
      "enabled": false,
      "description": "Forgejo does not support the GitHub Enterprise API required by actions/upload-artifact v4+"
    }
  ],
  "golang": {
    "postUpdateOptions": [
      "gomodTidy"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}